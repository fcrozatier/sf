<div class="container flex content-center py-20">
<div class="card">
  <h2>Connexion</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.label :email %>
      <%= f.text_field :email, autofocus: true, input_html: { autocomplete: "email" } %><br/>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="form-actions">
      <%= f.submit "Connexion", class: "btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
</div>
