<style>
  body {
    background-image: url("https://active-storage-rails-app.s3.eu-west-3.amazonaws.com/eso1006a.jpg");
    background-position: center;
    background-size: 100%;
  }
</style>

<div class="flex content-center py-20">
<div class="card">
  <h2 class="title mb-4">Connexion</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
    <div class="mb-4">
      <%= f.label :email, class: "label" %>
      <%= f.text_field :email, autofocus: true, input_html: { autocomplete: "email" }, class: "input" %>
    </div>
    <div class="mb-4">
      <%= f.label "Mot de passe", class: "label", for: "admin_password" %>
      <%= f.password_field :password, input_html: { autocomplete: "current-password" }, class: "input" %>
     
    </div> 
    </div>

    <div class="form-actions">
      <%= f.submit "Connexion", class: "btn" %>
    </div>
  <% end %>
</div>
</div>
