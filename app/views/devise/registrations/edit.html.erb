<div class="flex content-center py-20">
<div class="card">
<h2 class="title mb-6">Edition du compte <%= resource_name.to_s.downcase %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class:"label" %>
    <%= f.email_field :email, autofocus: true, class:"input mb-4" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field mb-4">
    <%= f.label "Mot de passe", for: :admin_password, class:"label" %> <i class="text-sm">(laisser vide pour ne pas le changer)</i>
    <%= f.password_field :password, autocomplete: "new-password", class:"input" %>
    <% if @minimum_password_length %>
      <br />
      <em class=""><%= @minimum_password_length %> charactères minimum</em>
    <% end %>
  </div>

  <div class="field mb-4">
    <%= f.label "Confirmation", for: :admin_password_confirmation, class:"label" %>
    <%= f.password_field :password_confirmation, class:"input" %>
  </div>

  <div class="field mb-4">
    <%= f.label "Mot de passe actuel", for: :admin_current_password, class:"label" %> <i class="text-sm">(Nécessaire pour confirmer les changments)</i><br />
    <%= f.password_field :current_password, class:"input" %>
  </div>

  <div class="actions mb-4">
    <%= f.submit "Mettre à jour", class:"btn-inverse" %>
  </div>
<% end %>

<%= link_to "Retour", :back, class:"shared-links ml-2" %>
</div>
</div>