<!DOCTYPE html>
<html class="h-full">
  <head>
    <title>Sfantasy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css2?family=Qwigley&display=swap" rel="stylesheet">

  </head>

  <body class="h-full">
    <% if admin_signed_in? %>
      <nav class="p-2">
      <% if controller.action_name == "index" %>
        <%= link_to "Nouvelle Unité", new_chapter_path, class: "btn inline-block"  %>
      <% elsif controller.action_name == "show" %>
        <%= link_to "Editer l'Unité", edit_chapter_path, class: "btn inline-block"  %>
      <% end %>
        <%= link_to current_admin.email, edit_admin_registration_path, class: "btn inline-block" %>
        <%= link_to "Déconnexion", destroy_admin_session_path, method: :delete, class: "btn inline-block" %>
      </nav>
    <% end %>
    <p class="ml-10 notice text-white"><%= notice %></p>
    <p class="ml-10 alert text-white"><%= alert %></p>

    <%= yield %>
  </body>
</html>
